                        <Border x:Name="FocusVisual"
                                Visibility="Collapsed"
                                IsHitTestVisible="false"
                                CornerRadius="1"
                                BorderBrush="#FF6DBDD1"
                                BorderThickness="1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

