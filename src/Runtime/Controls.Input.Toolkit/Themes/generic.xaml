                                               Visibility="Collapsed"
                                               Stroke="#FF45D6FA"
                                               StrokeThickness="1"
                                               RadiusX="1"
                                               RadiusY="1" />
                                    <Path Height="Auto"
                                          HorizontalAlignment="Stretch"
                                          Margin="4,3,4,3"
                                          VerticalAlignment="Stretch"
                                          Width="Auto"
                                          Fill="#FF333333"
                                          Stretch="Uniform"
                                          Data="F1 M 531.107,321.943L 541.537,321.943L 536.322,328.042L 531.107,321.943 Z " />
                                </Grid>
                            </ControlTemplate>
                        </Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
