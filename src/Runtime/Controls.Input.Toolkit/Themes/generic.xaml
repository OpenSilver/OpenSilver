                                                    <ControlTemplate TargetType="TextBox">
                                                        <ScrollViewer x:Name="ContentElement"
                                                                      Padding="0"
                                                                      BorderThickness="0" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </controls:ButtonSpinner>
                        </Border>
                        <Border x:Name="DisabledVisualElement"
