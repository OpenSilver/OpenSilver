                                         FontStyle="{TemplateBinding FontStyle}"
                                         FontWeight="{TemplateBinding FontWeight}"
                                         Foreground="{TemplateBinding Foreground}"
                                         MinWidth="20"
                                         x:Name="Text"
                                         AcceptsReturn="False"
                                         TextAlignment="Right"
                                         TextWrapping="NoWrap">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
