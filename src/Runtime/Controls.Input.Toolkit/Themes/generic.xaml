                                            IsHitTestVisible="True"
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="1">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid Background="Transparent" />
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
