           mc:Ignorable="d"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <StackPanel Orientation="Vertical">
        <Grid Width="200" Height="200" Background="#DDDDDD">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
