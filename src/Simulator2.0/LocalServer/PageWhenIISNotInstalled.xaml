<UserControl x:Class="DotNetForHtml5.LocalServer.PageWhenIISNotInstalled"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="#FF5B5B5B">
    <StackPanel Orientation="Vertical" Margin="45,40,45,40">
        <TextBlock Margin="0,0,0,0" Foreground="#FFDDDDDD" TextWrapping="Wrap" Width="400" TextAlignment="Center" VerticalAlignment="Top" FontSize="14" Text="To continue, the Windows feature named IIS (Internet Information Services) must be enabled. Please click the button below to automatically enable it. This operation may take several minutes, and you may be asked to restart your computer for the changes to take effect."/>
        <Button Content="Click to enable IIS" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Segoe UI Light" Padding="18,10" Margin="0,23,0,0" Click="ButtonEnableIIS_Click" Background="#FF55BB55" Foreground="White"/>
        <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center"><Hyperlink Foreground="#FF959FFF" Click="ButtonTroubleshooting_Click">More info / Troubleshooting...</Hyperlink></TextBlock>
    </StackPanel>
</UserControl>
