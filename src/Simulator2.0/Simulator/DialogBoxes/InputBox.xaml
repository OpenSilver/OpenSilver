<Window x:Class="OpenSilver.Simulator.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox AcceptsReturn="True" Grid.Row="0" x:Name="TextBox1"/>
        <Button Content="OK" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Padding="12,8" Cursor="Hand" Click="ButtonOK_Click"/>
        <Button Content="Cancel" Grid.Row="1" HorizontalAlignment="Left" Margin="10" Padding="12,8" Cursor="Hand" Click="ButtonCancel_Click"/>
    </Grid>
</Window>
